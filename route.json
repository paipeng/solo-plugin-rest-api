    {
      "method": "GET",
      "path": "/task/(\\d+)",
      "class": "TaskApi",
      "function": "getTaskById",
      "external": true
    },
    {
      "method": "GET",
      "path": "/task/(\\d+)/(\\w+)",
      "class": "TaskApi",
      "function": "getTimeEntriesByTaskId",
      "external": true
    },
    {
      "method": "POST",
      "path": "/task",
      "class": "TaskApi",
      "function": "createTask",
      "external": true
    }

    {
      "method": "GET",
      "path": "/client/(\\d+)",
      "class": "ClientApi",
      "function": "getClientById",
      "external": true
    },
    {
      "method": "GET",
      "path": "/client/(\\d+)/(\\w+)",
      "class": "ClientApi",
      "function": "getProjectsByClientId",
      "external": true
    },
    {
      "method": "POST",
      "path": "/client",
      "class": "ClientApi",
      "function": "createClient",
      "external": true
    }]},
    {

{
  "name": "Solo REST API",
  "version": "1.0.0",
  "routes": [
    {
        "api": "home",
        "route" :[ 

    {
      "method": "GET",
      "path": "/",
      "class": "HomeApi",
      "function": "getHome",
      "external": true
    },
    {
      "method": "GET",
      "path": "/version",
      "class": "HomeApi",
      "function": "getVersion",
      "external": true
    },
    {
      "method": "GET",
      "path": "/user",
      "class": "HomeApi",
      "function": "getUser",
      "external": true
    },
    {
      "method": "POST",
      "path": "/login",
      "class": "HomeApi",
      "function": "login",
      "external": true
    },
    {
      "method": "GET",
      "path": "/logout",
      "class": "HomeApi",
      "function": "logout",
      "external": true
    }]},
